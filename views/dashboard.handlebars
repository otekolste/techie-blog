<section class="text-gray-600 body-font overflow-hidden">
  <div class="container px-5 py-24 mx-auto">
    <h1 class="text-3xl mb-5 text-gray-900 font-medium title-font">Dashboard</h1>
    <div class="-my-8 divide-y-2 divide-gray-100">  
        {{#each posts}}
        <div class="py-8 flex flex-wrap md:flex-nowrap mb-5">
        <div class="md:flex-grow flex justify-between bg-indigo-200 rounded py-2">
        <h2 class="text-2xl font-medium text-gray-900 mb-2 pl-2">
          <a href="/editpost/{{id}}">{{title}}</a>
        </h2>
        <h2 class="text-2xl font-medium text-gray-900 mb-2 pr-2">{{format_date dateCreated}}</h2>
        {{/each}}
    </div>
  </div>
</section>

<div class="container mx-auto">
<a href="/newpost" class="py-2.5 px-4 text-xl font-medium text-center text-white bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
    New Post
</a>
</div>

