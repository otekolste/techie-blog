<div class="flex flex-wrap md:flex-nowrap mb-5 border-2 rounded-lg border-indigo-200">
  <div class="md:flex-grow space-2">
    <a href="/post/{{id}}">
    <div class="bg-indigo-200 space-y-1 pl-3">
      <h2 class="text-2xl font-medium text-gray-900 title-font mb-2">{{title}}</h2>
    </a>
      <h3>{{user.username}}</h3>
      <h3>{{format_date dateCreated}}</h3>
    </div>
    <p class="leading-relaxed pl-3 my-3">{{content}}</p>
  </div>
</div>

